<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/regular_margin"
            android:layout_marginRight="@dimen/regular_margin"
            android:background="@color/black"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/m_nameOfCard"
                style="@style/avanti_field_label"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/small_textview_height"
                android:text="@string/how_can_we_help"
                android:textColor="@color/white"
                android:textSize="@dimen/rewards_screen_text_size" />

            <Button
                android:id="@+id/BtnHelpfulHints"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/support_buttons_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/regular_margin"
                android:background="@color/green"
                android:text="@string/helpful_hints"
                android:textColor="@color/white"
                android:textSize="@dimen/support_buttons_text_size" />

            <Button
                android:id="@+id/BtnContactUs"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/support_buttons_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/small_margin"
                android:background="@color/orange"
                android:text="@string/contact_us"
                android:textColor="@color/white"
                android:textSize="@dimen/support_buttons_text_size" />

            <Button
                android:id="@+id/BtnYourFeedback"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/support_buttons_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/small_margin"
                android:background="@color/dark_blue"
                android:text="@string/your_feedback"
                android:textColor="@color/white"
                android:textSize="@dimen/support_buttons_text_size" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>