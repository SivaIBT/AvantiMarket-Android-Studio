<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="#000000">
    <ImageView
        android:id="@+id/m_logoImageView"
        android:src="@drawable/avanti_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/small_margin" />
    <LinearLayout
        android:id="@+id/m_menuButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/m_logoImageView"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true">
	     <Button
	        android:id="@+id/m_payButton"
	        android:text="Pay"
			style="@style/menu_button" />
	     <Button
	        android:id="@+id/m_locateButton"
	        android:text="Locate"
			style="@style/menu_button" />
   	     <Button
	        android:id="@+id/m_rewardsButton"
	        android:text="Rewards"
			style="@style/menu_button" />
   	     <Button
	        android:id="@+id/m_helpButton"
	        android:text="Help"
			style="@style/menu_button" />
	</LinearLayout>
     <Button
        android:id="@+id/m_balance_button"
        android:layout_marginTop="@dimen/small_margin"
        android:background="#33B5E5"
        android:text="CardOne: Business | Bal:$12.50"
        android:layout_below="@id/m_menuButtonsContainer"
        android:textColor="#000000"
        android:layout_width="match_parent"
		android:layout_height="41dp" />
    <ImageView
        android:id="@+id/m_market_card"
        android:src="@drawable/avanti_logo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_vertical"
        android:layout_below="@id/m_balance_button"
        android:layout_marginTop="1dp" />
</RelativeLayout>