<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/oval_white"
    android:padding="@dimen/small_margin" >

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/small_margin"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/regular_text_size"
        android:textStyle="bold" 
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/dialog_txtMsg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:gravity="center_horizontal"
        android:text="Error message will display here"
        android:textColor="@color/black"
        android:textSize="@dimen/regular_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_txtMsg"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:weightSum="1.0"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/btn_Yes"
            android:layout_width="match_parent"
            android:layout_height="@dimen/regular_btn_height"
            android:layout_margin="@dimen/small_margin"
            android:background="@drawable/button_green_grey_background"
            android:text="@string/yes"
            android:textColor="@color/white"
            android:layout_weight="0.5"
            android:textSize="@dimen/regular_text_size" />

        <Button
            android:id="@+id/btn_No"
            android:layout_width="match_parent"
            android:layout_height="@dimen/regular_btn_height"
            android:layout_margin="@dimen/small_margin"
            android:background="@drawable/button_green_grey_background"
            android:text="@string/no"
            android:textColor="@color/white"
            android:layout_weight="0.5"
            android:textSize="@dimen/regular_text_size" />
    </LinearLayout>

</RelativeLayout>