<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_usingTheApp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_uta_articleListDisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tv_usingTheApp_title"
            style="@style/avanti_field_label"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_marginTop="@dimen/regular_margin"
            android:text="@string/search_how_to"
            android:textColor="@color/white"
            android:textSize="@dimen/support_list_text_size" />

        <Button
            android:id="@+id/BtnFind_UsingTheApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_usingTheApp_title"
            android:layout_marginBottom="@dimen/very_small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_marginTop="@dimen/very_small_margin"
            android:background="@color/light_orange"
            android:gravity="center"
            android:padding="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="@string/find"
            android:textColor="@color/white"
            android:textSize="@dimen/support_list_text_size" />

        <EditText
            android:id="@+id/et_usingTheAppSearchBox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_usingTheApp_title"
            android:layout_marginBottom="@dimen/very_small_margin"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/very_small_margin"
            android:layout_marginTop="@dimen/very_small_margin"
            android:layout_toLeftOf="@+id/BtnFind_UsingTheApp"
            android:background="@color/white"
            android:hint="@string/search_keywords_hint"
            android:padding="5dip"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/support_list_text_size" />

        <ListView
            android:id="@+id/ListView_UsingTheApp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/et_usingTheAppSearchBox"
            android:layout_marginBottom="@dimen/very_small_margin"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:smoothScrollbar="true" >
        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_uta_articleDisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_uta_articleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/regular_margin"
            android:layout_marginRight="@dimen/regular_margin"
            android:layout_marginTop="@dimen/regular_margin"
            android:textColor="@color/black"
            android:textSize="@dimen/support_list_text_size" />

        <LinearLayout
            android:id="@+id/sv_uta_articleDetails"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/tv_uta_articleTitle"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginLeft="@dimen/regular_margin"
            android:layout_marginRight="@dimen/regular_margin"
            android:layout_marginTop="@dimen/small_margin" >

            <WebView
                android:id="@+id/wv_uta_article"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/very_small_margin"
                android:gravity="top"
                android:padding="5dip"
                android:background="@android:color/transparent"
                android:textColor="@color/black" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
