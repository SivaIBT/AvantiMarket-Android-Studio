<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:visibility="gone" >

    <Button
        android:id="@+id/m_firstCardLogo"
        android:layout_width="@dimen/logo_width_in_reload"
        android:layout_height="@dimen/big_margin"
        android:layout_marginLeft="@dimen/regular_margin"
        android:background="@drawable/amex" />

    <TextView
        android:id="@+id/m_firstCardNumber"
        style="@style/avanti_field_label"
        android:layout_height="@dimen/big_margin"
        android:layout_marginLeft="@dimen/small_margin"
        android:text="@string/hidden_card_number"
        android:textColor="@color/dark_grey" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/reload_tick_mark_spacing"
        android:background="@drawable/tick"
        android:visibility="invisible" />

</LinearLayout>