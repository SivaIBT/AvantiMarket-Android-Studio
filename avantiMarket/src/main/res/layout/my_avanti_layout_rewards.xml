<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/m_nameLabel"
                style="@style/avanti_field_label"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/regular_margin"
                android:layout_marginLeft="@dimen/regular_margin"
                android:layout_marginTop="@dimen/regular_margin"
                android:minHeight="@dimen/regular_textview_height"
                android:text="@string/hi"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/m_balanceRewardsContainer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_icons_height"
                android:layout_marginLeft="@dimen/regular_margin"
                android:layout_marginRight="@dimen/regular_margin"
                android:gravity="center" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/black"
                    android:gravity="center_horizontal" >

                    <Button
                        android:id="@+id/m_balanceButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/button_balance_with_rewards"
                        android:text="$"
                        android:textColor="@color/green"
                        android:textSize="@dimen/balance_text_size" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/m_rewardsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_black_orange_background"
                    android:scaleType="fitXY"
                    android:src="@drawable/rewards" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/m_historyCardsContainer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_icons_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/regular_margin"
                android:layout_marginLeft="@dimen/regular_margin"
                android:layout_marginRight="@dimen/regular_margin"
                android:layout_marginTop="5dp"
                android:gravity="center" >

                <ImageButton
                    android:id="@+id/m_cardsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_black_blue_background"
                    android:scaleType="centerInside"
                    android:src="@drawable/ways_to_pay" />

                <ImageButton
                    android:id="@+id/m_historyButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_black_orange_background"
                    android:scaleType="centerInside"
                    android:src="@drawable/history" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_reload"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/regular_margin"
                android:layout_marginRight="@dimen/regular_margin"
                android:background="@color/green"
                android:padding="3dp"
                android:visibility="gone" >

                <Button
                    android:id="@+id/m_reloadButton"
                    style="@style/avanti_button_reload"
                    android:background="@drawable/button_white_grey_background"
                    android:text="@string/reload"
                    android:textColor="@color/green" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>